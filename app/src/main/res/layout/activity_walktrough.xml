<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Walkthrough">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#c1cbd3"
        android:layout_above="@+id/walk_footer"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
android:id="@+id/walk_footer"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ismartdev.mn.darkhanwindow.text.Light
            android:id="@+id/walk_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/skip"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/walk_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            app:fillColor="@color/colorPrimary"
            app:pageColor="#9eb2c3"
            app:radius="6dp"
            app:snap="false"
        />

        <ismartdev.mn.darkhanwindow.text.Light
            android:id="@+id/walk_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/next"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
